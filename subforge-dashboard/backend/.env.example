# Environment Configuration
ENVIRONMENT=development

# Application Settings
APP_NAME="SubForge Dashboard API"
APP_VERSION="1.0.0"
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Database Configuration
DATABASE_URL=sqlite:///./subforge_dashboard.db
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/subforge_dashboard
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE=300

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://127.0.0.1:3000"]

# Authentication (Future use)
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Watcher Settings
ENABLE_FILE_WATCHER=true
WATCHER_DEBOUNCE_SECONDS=1.0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=standard

# WebSocket Settings
MAX_WEBSOCKET_CONNECTIONS=100
WEBSOCKET_PATH=/ws

# Metrics Settings
METRICS_UPDATE_INTERVAL=30

# SubForge Paths (will be auto-detected if not set)
# SUBFORGE_ROOT=/path/to/project
# CLAUDE_DIR=/path/to/.claude
# SUBFORGE_DIR=/path/to/.subforge
# AGENTS_DIR=/path/to/.claude/agents